<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container-fluid">
     

    
    <div style="width:100%; margin:0 auto;">
        <!-- #Add custom filters in the server-side dataTable -->
        <div class="row well input-daterange">
            

            <div class="col-sm-3">
                <label class="control-label">Start date</label>
                <input class="form-control datepicker" name="fromDate" id="fromDate" type="text" placeholder="mm/dd/yyyy" style="height: 40px;">
            </div>

            <div class="col-sm-3">
                <label class="control-label">End date</label>
                <input class="form-control datepicker" name="toDate" id="toDate" type="text" placeholder="mm/dd/yyyy" style="height: 40px;">
            </div>

            <div class="col-sm-3">
                <label class="control-label">Level</label>
                <select class="form-control" name="level" id="level" style="height: 40px;">
                    <option value="">- Please select -</option>
                    <option value="Info">Info</option>
                    <option value="Debug">Debug</option>
                    <option value="Error">Error</option>
                </select>
            </div>

            <div class="col-sm-2">
                <button class="btn btn-danger btn-block" type="reset" name="reset" id="reset" style="margin-top: 30px">
                    <i class="fa fa-refresh"></i> Reset
                </button>
            </div>

            <div class="col-sm-12 text-danger" id="error_log"></div>
        </div>

        <br /><br />
        <table id="logTable" class="table table-striped table-bordered nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Created On</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th style="width:200px !important">Stack Trace</th>
                    <th>Exception</th>
                    <th>Logger</th>
                    <th>Url</th>
                    @* <th>Form Id</th> *@
                </tr>
            </thead>
        </table>

        <!-- Modal -->
        <div class="modal" id="logDetailsModal" tabindex="-1" role="dialog">
            <div class="modal-dialog custom-modal" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Log Details</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table id="modalTable" class="table table-bordered" width="100%">
                            <thead>
                                <tr>
                                    <th width="5%" style="width: 5%">ID</th>
                                    <th width="25%">Message</th>
                                    <th width="60%">Stack Trace</th>
                                    <th width="10%">Url</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td width="5%" style="width: 5%"><span id="id"></span></td>
                                    <td width="25%"><span id="message"></span></td>
                                    <td width="60%"><span id="stackTrace"></span></td>
                                    <td width="10%"><span id="url"></span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>



    </div>

    



</div>
